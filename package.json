{
  "name": "ts-reveal-types",
  "displayName": "TypeScript Reveal Types",
  "description": "",
  "icon": "images/logo.png",
  "version": "1.0.2",
  "publisher": "betafcc",
  "author": "Beta Faccion <betafcc@gmail.com> (https://github.com/betafcc)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/betafcc/ts-reveal-types.git"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:ts-reveal-types.revealTypes"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ts-reveal-types.revealTypes",
        "title": "TypeScript: Reveal Types"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ts-reveal-types.revealTypes",
          "when": "editorLangId == typescript || editorLangId == typescriptreact"
        }
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off"
    },
    "ignorePatterns": [
      "out",
      "dist",
      "**/*.d.ts"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "arrowParens": "avoid"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash.debounce": "^4.0.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/prettier": "^2.7.2",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "prettier": "^2.8.7"
  }
}
